<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/text_create"
        android:text="Создать аккаунт"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="32sp"
        android:layout_marginTop="64dp"
        android:layout_marginHorizontal="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_image_container"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="500dp"
        app:layout_constraintTop_toBottomOf="@id/text_create"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profile_image"
            android:src="@drawable/round_person_outline_24"
            android:layout_gravity="center"
            android:backgroundTint="@color/gray_50"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_edit_text"
        android:hint="Почта"
        android:textColor="@color/gray_50"
        android:textColorHint="@color/gray_50"
        android:textColorHighlight="@color/gray_50"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="8dp"
        android:drawableTint="@color/gray_50"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="48dp"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/profile_image_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_edit_text"
        android:hint="Пароль"
        android:textColor="@color/gray_50"
        android:textColorHint="@color/gray_50"
        android:textColorHighlight="@color/gray_50"
        android:drawableStart="@drawable/baseline_password_24"
        android:drawablePadding="8dp"
        android:drawableTint="@color/gray_50"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="48dp"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="Пароль должен сожержать от 8 до 20 символов"
        android:textSize="12sp"
        android:textColor="@color/gray_30"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="@id/password"
        app:layout_constraintEnd_toEndOf="@id/password"/>

    <EditText
        android:id="@+id/password_confirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_edit_text"
        android:hint="Подтвердите пароль"
        android:textColor="@color/gray_50"
        android:textColorHint="@color/gray_50"
        android:textColorHighlight="@color/gray_50"
        android:drawableStart="@drawable/baseline_password_24"
        android:drawablePadding="8dp"
        android:drawableTint="@color/gray_50"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="48dp"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/contacts_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_edit_text"
        android:hint="Контактная информация"
        android:textColor="@color/gray_50"
        android:textColorHint="@color/gray_50"
        android:textColorHighlight="@color/gray_50"
        android:drawableStart="@drawable/baseline_password_24"
        android:drawablePadding="8dp"
        android:drawableTint="@color/gray_50"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="48dp"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/password_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_contact_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="Telegram, VK, номер телефона"
        android:textSize="12sp"
        android:textColor="@color/gray_30"
        app:layout_constraintTop_toBottomOf="@id/contacts_info"
        app:layout_constraintStart_toStartOf="@id/contacts_info"
        app:layout_constraintEnd_toEndOf="@id/contacts_info"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sing_up"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Зарегистрироваться"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:padding="16dp"
        android:backgroundTint="@color/cyan"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="48dp"
        app:layout_constraintTop_toBottomOf="@id/contacts_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:text="Уже есть аккаунт?"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_transparent_button"
            android:text="Войти"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="16sp"
            android:paddingHorizontal="6dp"
            android:textColor="@color/cyan"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>