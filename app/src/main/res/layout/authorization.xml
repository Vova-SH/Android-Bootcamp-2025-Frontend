<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/authorization_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ellipse_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/ellipse_2" />

    <ImageView
        android:id="@+id/ellipse_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90sp"
        android:src="@drawable/ellipse_1"/>

    <ImageView
        android:id="@+id/ellipse_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ellipse_3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="300sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/my_font_medium"
            android:text="@string/welcome"
            android:textSize="25sp"
            android:layout_marginBottom="15sp"/>

        <EditText
            android:id="@+id/enter_login"
            android:layout_width="match_parent"
            android:layout_height="32sp"
            android:background="@drawable/et_style"
            android:hint="@string/enter_login"
            android:textSize="16sp"
            android:fontFamily="@font/my_font_regular"
            android:textColorHint="@color/gray"
            android:padding="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp" />

        <EditText
            android:id="@+id/enter_password"
            android:layout_width="match_parent"
            android:layout_height="32sp"
            android:background="@drawable/et_style"
            android:hint="@string/enter_password"
            android:textSize="16sp"
            android:fontFamily="@font/my_font_regular"
            android:textColorHint="@color/gray"
            android:padding="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/log_in_btn"
            android:layout_width="match_parent"
            android:layout_height="32sp"
            app:backgroundTint="@color/coral"
            app:cornerRadius="8dp"
            android:background="@drawable/btn_style"
            android:layout_gravity="center"
            android:text="@string/log_in"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/my_font_regular"
            android:padding="0sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/no_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_account"
                android:textSize="16sp"
                android:fontFamily="@font/my_font_regular" />

            <FrameLayout
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/sign_up">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/sign_up"
                    android:fontFamily="@font/my_font_medium"
                    android:textSize="16sp"
                    android:paddingBottom="12sp"
                    android:textColor="@color/coral"/>

                <View
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="19sp"
                    android:layout_width="150sp"
                    android:background="@color/coral"
                    android:layout_height="1dp"/>

            </FrameLayout>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>