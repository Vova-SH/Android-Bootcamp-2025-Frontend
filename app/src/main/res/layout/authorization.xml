<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/authorization_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:contentDescription="@string/gier"
        android:src="@drawable/ellipse_2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90sp"
        android:contentDescription="@string/gier"
        android:src="@drawable/ellipse_1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ellipse_3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="300sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/my_font_medium"
            android:text="@string/welcome"
            android:textSize="25sp"
            android:layout_marginBottom="15sp"/>

        <EditText
            android:id="@+id/enter_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:autofillHints=""
            android:background="@drawable/et_style"
            android:hint="@string/enter_login"
            android:inputType="text"
            android:textSize="16sp"
            android:fontFamily="@font/my_font_regular"
            android:textColorHint="@color/gray"
            android:padding="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:scrollbarSize="4dp" />

        <EditText
            android:id="@+id/enter_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:autofillHints="text"
            android:background="@drawable/et_style"
            android:hint="@string/enter_password"
            android:textSize="16sp"
            android:fontFamily="@font/my_font_regular"
            android:textColorHint="@color/gray"
            android:padding="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp" />

        <!--<Button
            android:id="@+id/log_in_btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login" />-->

        <Button
            android:id="@+id/log_in_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_style"
            android:fontFamily="@font/my_font_regular"
            android:padding="0dp"
            android:text="@string/log_in"
            android:textSize="16sp"
            android:visibility="visible"
            app:backgroundTint="@null" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/no_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/my_font_regular"
                android:text="@string/no_account"
                android:textSize="16sp" />

            <FrameLayout
                android:id="@+id/sign_up"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/my_font_medium"
                    android:paddingBottom="12sp"
                    android:text="@string/sign_up"
                    android:textColor="@color/coral"
                    android:textSize="16sp" />

                <View
                    android:layout_width="150sp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="19sp"
                    android:background="@color/coral" />

            </FrameLayout>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
