<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/regButton"
        android:layout_width="315.dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/mywhite"
        android:fontFamily="@font/zen_maru_gothic"
        android:lineSpacingExtra="0sp"
        android:text="@string/registration"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="26sp"
        android:typeface="normal"
        app:iconTintMode="add"
        app:strokeColor="#253465"
        app:strokeWidth="2dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="365dp" />

    <Button
        android:id="@+id/enterButton"
        android:layout_width="315.dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/zen_maru_gothic"
        android:lineSpacingExtra="0sp"
        android:text="@string/enter"
        android:textAlignment="center"
        android:textSize="26sp"
        android:typeface="normal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="275dp" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/blue"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="663dp">

    </FrameLayout>

    <ImageButton
        android:id="@+id/listButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="13dp"
        android:adjustViewBounds="true"
        android:background="@color/blue"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/list2"
        app:tint="@color/mywhite"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
        tools:srcCompat="@drawable/list2" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="13dp"
        android:adjustViewBounds="true"
        android:background="@color/blue"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/profile"
        app:tint="#E1A235"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
        tools:srcCompat="@drawable/profile" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="13dp"
        android:adjustViewBounds="true"
        android:background="@color/blue"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profileButton"
        app:layout_constraintStart_toEndOf="@+id/listButton"
        app:srcCompat="@drawable/home"
        app:tint="@color/mywhite"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
        tools:srcCompat="@drawable/home" />

</androidx.constraintlayout.widget.ConstraintLayout>