<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolunteersActivity"
    android:background="@color/bg">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:background="@drawable/header_round">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/input">

    </LinearLayout>

</LinearLayout>
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal"
    android:background="@drawable/nav_round"
    android:layout_alignParentBottom="true">


    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/volunteers" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/main"
        android:background="@android:color/transparent" />
    <ImageButton
    android:id="@+id/imageButton3"
    android:layout_width="66dp"
    android:layout_height="66dp"
    android:layout_weight="1"
    app:srcCompat="@drawable/profile" android:background="@android:color/transparent" />
</LinearLayout>

</RelativeLayout>