<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relLayMap">

    <!-- Вот эта штука - это карта -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintBottom_toTopOf="@id/bottom_bar" />

    <!-- Нижняя панелька -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffd9d9d9"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bt_map"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/ic_map" />

        <ImageButton
            android:id="@+id/bt_ivents"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/ic_ivents" />

        <ImageButton
            android:id="@+id/bt_notif"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/ic_notifications" />

        <ImageButton
            android:id="@+id/bt_profile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/ic_profile" />

    </LinearLayout>

</RelativeLayout>
