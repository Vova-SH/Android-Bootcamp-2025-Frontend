<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#253465"
        android:visibility="visible"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="663dp">

    </FrameLayout>

    <Button
        android:id="@+id/nearestCentersButton"
        android:layout_width="315.dp"
        android:layout_height="55dp"
        android:backgroundTint="#253465"
        android:fontFamily="@font/zen_maru_gothic"
        android:lineSpacingExtra="0sp"
        android:text="@string/nearistcentres"
        android:textAlignment="textStart"
        android:textSize="26sp"
        android:typeface="normal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="480dp" />

    <ImageButton
        android:id="@+id/listButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="13dp"
        android:adjustViewBounds="true"
        android:background="#253465"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/list2"
        app:tint="#FCF5FD"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
        tools:srcCompat="@drawable/list2" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="13dp"
        android:adjustViewBounds="true"
        android:background="#253465"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/profile"
        app:tint="#FCF5FD"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
        tools:srcCompat="@drawable/profile" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="13dp"
        android:adjustViewBounds="true"
        android:background="#253465"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profileButton"
        app:layout_constraintStart_toEndOf="@+id/listButton"
        app:srcCompat="@drawable/home"
        app:tint="#E1A235"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="237dp"
        android:layout_height="237dp"
        app:srcCompat="@drawable/logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="109dp" />

    <ImageButton
        android:id="@+id/infoButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        android:background="#FFFFFF"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/info"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,SpeakableTextPresentCheck"
        tools:srcCompat="@drawable/info" />

</androidx.constraintlayout.widget.ConstraintLayout>