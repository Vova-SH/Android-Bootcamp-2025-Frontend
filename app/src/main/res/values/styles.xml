<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InputField" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:background">@drawable/input_field_card</item>
        <item name="fontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="ProcessButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="CloseButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="circleRadius">32dp</item>
        <item name="android:drawable">@drawable/close_md</item>
    </style>

    <style name="BottomBarSelectedItem" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/gray</item>
    </style>
</resources>