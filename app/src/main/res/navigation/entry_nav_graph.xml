<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entry_nav_graph"
    app:startDestination="@id/authorization">
    <fragment
        tools:layout="@layout/fragment_auth"
        android:id="@+id/authorization"
        android:name="ru.sicampus.bootcamp2025.ui.entry.auth.AuthFragment"
        android:label="Authorization">
        <action android:id="@+id/action_auth_to_register"
            app:destination="@id/registration"/>
        <action
            android:id="@+id/action_auth_to_main"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/registration"
        android:name="ru.sicampus.bootcamp2025.ui.entry.register.RegisterFragment"
        android:label="Registration"
        tools:layout="@layout/fragment_register">
        <action android:id="@+id/action_register_to_auth"
            app:destination="@id/authorization"/>
        <action
            android:id="@+id/action_register_to_main"
            app:destination="@id/mainActivity" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="ru.sicampus.bootcamp2025.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>